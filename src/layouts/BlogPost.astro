---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Body from '../components/Body.astro';
import Content from '../components/Content.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, updatedDate, heroImage, tags } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<Body>
		<Header />
		<style is:global>
			main article.markdown-body {
				ul {
					@apply list-disc list-inside pl-4 mb-4
				}
				h1, h2, h3, h4, h5 {
					@apply font-bold font-suse
				}
				h1 {
					@apply text-4xl
				}
				h2 {
					@apply text-2xl
				}
				h3 {
					@apply text-xl
				}
				h4 {
					@apply text-lg
				}
				img {
					@apply border border-slate-300 dark:border-zinc-700 rounded-xl mb-6
				}
				p {
					@apply mb-6
				}
				a {
					@apply underline underline-offset-2 hover:text-orange-500 decoration-orange-500
				}
			}
			</style>

<main class="pt-[56px] font-suse">
	<Content className="pt-6 markdown-body">
		<div class="mb-8 max-w-2xl mx-auto">
			{
				heroImage && (
					<img
						class="border border-slate-300 dark:border-zinc-700 rounded-xl object-cover"
						src={heroImage}
						alt=""
					/>
				)
			}
		</div>
		<h1 class="text-3xl my-1 font-mplus">{title}</h1>
		<div>{description}</div>
		<hr class="border-top border-zinc-400 my-4" />
		<slot />
		<span class="underline underline-offset-2 hover:text-orange-500 decoration-orange-500 text-2xl">

		</span>
	</Content>
</main>
		<Footer />
	</Body>
</html>
